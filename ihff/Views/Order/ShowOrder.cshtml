@{
    ViewBag.Title = "Payment details";
}

<script>
    $(document).ready(function () {
        $("#CounterInfo").hide()
        $("#Bank").hide()
        $('input[type="Radio"]').click(
            function () {
                if ($(this).attr('id') == 'CounterBtn') {
                    $('#CounterInfo').show();
                }

                else {
                    $('#CounterInfo').hide();
                }
            });

        $('input[type="Radio"]').click(
    function () {
        if ($(this).attr('id') == 'IDealBtn') {
            $('#Bank').show();
        }

        else {
            $('#Bank').hide();
        }
    });
    });
</script>

<h2>Payment details</h2>
<table id="TableOrder">
    <thead>
        <tr>
            <td>Name</td>
            <td>Activity</td>
            <td>Date/Time</td>
            <td>Quantity</td>
            <td>Price</td>
            <td>Price Total</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>2001: A Space Odyssey</td>
            <td>Film</td>
