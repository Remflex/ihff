<main>

    <div class="FilmFilter Top">
        <ul>
            <li><a href="#" id="All">Film offer</a></li>
            <li><a href="#" id="Top">Top 10</a></li>
        </ul>
    </div>
    <div class="FilmFilter Bottom">
        <ul>
            <li><a href="#" id="Wednesday">Wednesday</a></li>
            <li><a href="#" id="Thursday">Thursday</a></li>
            <li><a href="#" id="Friday">Friday</a></li>
            <li><a href="#" id="Saturday">Saturday</a></li>
            <li><a href="#" id="Sunday">Sunday</a></li>
        </ul>
    </div>

    <div class="filmcontainer" id="AllFilms">
        @{ int i = 0; }
        @foreach (Film film in Model.Item1)
        {
            i++;
            if (i == 21)
            {
                <a href="@Url.Action("ShowFilmInformation", "Event", new {filmId = film.Film_Id})">
                    <div class="film twentyOne">
                        <img src="@Url.Content(String.Format("~/Content/images/Films/{0}.png", film.Film_Id))" height="197" width="120" />
                        <h4>@film.Name</h4>
                    </div>
                </a>
            }
            else
            {
                <a href="@Url.Action("ShowFilmInformation", "Event", new {filmId = film.Film_Id})">
                    <div class="film">
                        <img src="@Url.Content(String.Format("~/Content/images/Films/{0}.png", film.Film_Id))" height="197" width="120" />
                        <h4>@film.Name</h4>
                    </div>
                </a>
            }
        }
    </div>

    <div class="filmcontainer" id="TopFilms">

        @{ int t = 0; }
        @foreach (Film film in Model.Item3)
        {
            t++;
            if (t < 10)
            {
                <a href="@Url.Action("ShowFilmInformation", "Event", new {filmId = film.Film_Id})">
                    <div class="FilmDay">
                        <img src="@Url.Content(String.Format("~/Content/images/Films/{0}.png", film.Film_Id))" height="130" width="90" />
                        <h4>@film.Name</h4>
                        <p>@film.ShortDescription</p>
                        @if (film.Name == "WALL·E" || film.Name == "Robot & Frank")
                        {
