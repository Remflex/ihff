<div class="slider" align="center">
    <img src="~/Content/images/slider/en_Header_Restaurant.jpg" class="sliderimage" />
    <img src="~Content/images/slider/en_Header_Films.jpg" class="sliderimage" />
    <img src="~/Content/images/slider/Header_Bezienswaardigheid.jpg" class="sliderimage" />
</div>
<main>

    <div class="FilmFilter Top">
        <ul>
            <li><a href="#" id="All">Specials offer</a></li>
        </ul>
    </div>
    <div class="FilmFilter">
        <ul>
            <li><a href="#" id="Wednesday">Wednesday</a></li>
            <li><a href="#" id="Thursday">Thursday</a></li>
            <li><a href="#" id="Friday">Friday</a></li>
            <li><a href="#" id="Saturday">Saturday</a></li>
            <li><a href="#" id="Sunday">Sunday</a></li>
        </ul>
    </div>

    <div class="filmcontainer" id="AllSpecials">
        @foreach (Special special in Model.Item1)
        {
            <a href="@Url.Action("ShowSpecialInformation", "Event", new {specialId = special.Special_Id})">
                <div class="film">
                    <img src=@Url.Content(String.Format("~/Content/images/Specials/{0}.png", special.Special_Id)) alt="Filmpje" height="197" width="120" />
                    <h4>@special.Name</h4>
                </div>
            </a>
        }
    </div>

    <div class="filmcontainer" id="SpecialsWednesday">
        @foreach (SpecialModel special in Model.Item2)
        {
            if (special.Day == "Wednesday")
            {
                <a href="@Url.Action("ShowSpecialInformation", "Event", new {specialId = special.Special_Id})">
                    <div class="FilmDay">
                        <img src="@Url.Content(String.Format("~/Content/images/Specials/{0}.png", special.Special_Id))" height="130" width="90" />
                        <h4>@special.Name</h4>
                        <h5>WED @special.Time (@special.Location)</h5>
                        @if (special.Special_Id == 2002 || special.Special_Id == 2006)
                        {
                            <p>@special.ShortDescription (Led By @special.Salutation @special.Led_By)</p>
                        }
                        else
                        {
                            <p>@special.ShortDescription (Given By @special.Salutation @special.Led_By)</p>
                        }
                        @if (special.ExtraInfo != null)
                        {
                            <p id="Extra">@special.ExtraInfo</p>
                        }
                    </div>
                </a>
            }
        }
